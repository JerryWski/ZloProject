---
const navItems = ['Consulting', 'Strategie', 'Academy', 'Współpraca'];
---


<header>
  <nav class="nav-container">
    <div class='logo-container'>
      <h1 class='heading'><span class='span_hash'>#</span>Coach SamoZło</h1>
      <h3 class='subheading'>Make's a difference</h3>
    </div>
    <div class="list-wrapper">
      <ul class="lists-mobile">
        {navItems.map((items) => <li>{items}</li>)}
      </ul>
    </div>
  </nav>
</header>

<style>
  h1,
  span {
    text-align: left;
    font-family: var(--main-font);
  }
  .nav-container {
    display: flex;
    align-items: center;
    gap: 20px;
  }
  .logo-container {
    max-width: 320px;
    padding: 10px;
  }
  .lists-mobile {
    display: flex;
    flex-direction: row;
    list-style: none;
    color: var(--base-orange);
    display: none;
  }
  .heading {
    color: var(--base-white);
    font-weight: 700;
    font-size: clamp(1.3rem, 3vw, 2.3rem);
  }
  .subheading {
    color: var(--base-orange);
    font-family: 'Montez', cursive;
    font-weight: 300;
    font-size: clamp(1rem, 2.5vw, 2rem);
    line-height: 1rem;
    font-style: italic;
    letter-spacing: 3px;
  }

  .span_hash {
    color: var(--base-orange);
    font-size: clamp(1.5rem, 3vw, 2.3rem);
  }
</style>
