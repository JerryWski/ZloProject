---
import { Image } from "astro:assets";
import blog1 from '../../assets/blog1.png'
---

<section>
  <h2 class='header'>
    Zajrzyj na m√≥j <a href='/blog' class='header-link'>#Blog</a>
  </h2>
  <div class='image-wrapper'>
    <Image class='image' src={blog1} alt='sitting-man' />
  </div>
</section>

<style>
  section {
    padding: 45px 25px 0 25px;
    display: flex;
    align-items: center;
    background-color: var(--base-orange);
  }
  .header {
    width: 50%;
    font-family: var(--font_3);
    font-size: clamp(1.4rem, 4vw, 3rem);
    letter-spacing: -.5px;
    line-height: normal;
    text-transform: uppercase;
    font-weight: 900;
    padding-bottom: 40px;
    color: var(--base-white);
  }
  .header-link {
    text-decoration: none;
    color: var(--dark-violet);
    font-size: clamp(1.6rem, 4vw, 4rem);
  }
  .image-wrapper {
    display: flex;
    width: 100vw;
    overflow: hidden;
  }
  .image {
    display: flex;
    width: 100%;
    height: auto;
  }
  @media (min-width: 900px) {
    section {
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .image-wrapper {
      width: auto;
    }
    .image {
      width: 70%;
    }
  }
</style>
