---
import Card from './Card.astro';
const postsData = [
  {
    image: '/blog-image1.webp',
    title: 'To jest tytuł do wstępu do mojego pierwszego bloga - zapraszam',
    author: 'Maciej Martowicz',
    date: '25-09-2023r.',
    dot: '|',
    href: '/'

  },
  {
    image: '/about4.png',
    title: 'To jest tytuł do wstępu do mojego druiego bloga - zapraszam',
    author: 'Maciej Martowicz',
    date: '27-09-2023r.',
    dot: '|',
    href: '/'
  },
];
---

<div class='container'>
  {
    postsData.map((post) => (
      <Card
        image={post.image}
        title={post.title}
        href={post.href}
        author={post.author}
        date={post.date}
        dot={post.dot}
      />
    ))
  }
</div>

<style>
  .container {
    background-color: var(--base-white);
    gap: 3rem;
    display: flex;
    flex-direction: column;
  }
  .card {
    display: flex;
    flex-direction: column;
  }
</style>
