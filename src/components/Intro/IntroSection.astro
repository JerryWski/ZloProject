---
import IntroDailyWork from '../Intro/IntroDailyWork';
import { Image } from 'astro:assets';
import maciek_m from '../../assets/m_m2.png';
---

<section class='intro-section'>
  <div class='intro-right-side'>
    <h1 class='header'>Aloha!</h1>
    <div class='img-container'>
      <Image
        class='image'
        
        src={maciek_m}
        alt='man'
      />
    </div>
    <div class='subheader'>
      <h2 class='subheader-coach'>#Coach Samo Zuo</h2>
      <p class='subheader-name'>Maciej Martowicz</p>
    </div>
  </div>
  <!-- about me section? -->
  <div class='intro-left-side'>
    <IntroDailyWork client:load />
    <a href='#offer' class='button-link'>Sprawd≈∫</a>
  </div>
</section>

<style>
  .intro-section {
    background-image: linear-gradient(to top, #151220 0%, #2a233e 100%);
    padding: 25px 25px 65px 25px;
  }
  .header {
    margin-top: 80px;
    text-align: center;
    font-size: 6rem;
    color: var(--base-orange);
    font-family: var(--fancy-font);
  }
  .subheader {
    margin-top: 15px;
    text-align: center;
    padding: 15px 0px;
    font-family: var(--font_3);
    color: var(--base-white);
  }
  .subheader-coach {
    font-weight: 900;
    font-size: clamp(2rem, 3.5vw, 3.5rem);
    letter-spacing: -0.5px;
  }
  .subheader-name {
    text-transform: uppercase;
    font-weight: 300;
    color: var(--base-orange);
    font-size: clamp(0.8rem, 2vw, 1.5rem);
  }

  .img-container {
    margin: 0px auto 0 auto;
    max-width: 280px;
  }
  .image {
    width: 100%;
    height: auto;
    object-fit: contain;
  }
  .button-link {
    width: fit-content;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 25px 0 25px 0;
    font-size: 1.1rem;
    text-decoration: none;
    color: var(--base-white);
    padding: 10px 80px;
    border: 1px solid var(--base-white);
    border-radius: 19px;
    font-family: var(--second-font);
    transition: 0.2s all ease-in;
  }
  .button-link:hover {
    border: transparent;
    background-color: var(--base-orange);
  }

  @media (min-width: 350px) {
    .subheader {
      font-size: clamp(1.5rem, 3vw, 4rem);
    }
  }
  @media (min-width: 900px) {
    .intro-section {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
    }
    .intro-left-side {
      width: 40%;
    }
    .intro-right-side {
      order: 1;
      width: 40%;
    }
    .header {
      margin-top: 0;
    }
    .subheader {
      margin-top: 0;
    }
  }
</style>
