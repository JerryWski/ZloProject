---
import Layout from '../layouts/Layout.astro';
import AllSubpageHeader from '../layouts/mini-layouts/AllSubpageHeader.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import handIcon from '../assets/hand2-white-icon.png';
import camera from '../assets/camera.png';
import PostList from '../components/PostList.astro';

const posts = await getCollection('posts');
---

<Layout title='#Blog'>
  <AllSubpageHeader
    heading='#Blog'
    subtext=''
    text='Coach Same Zuo i jego złote myśli'
    image='/blog3-icon.svg'
  />

  <div id="#interviews" class='interview-wrapper'>
    <span>|</span>
    <a href='#interviews'>Wywiady z Samo Zuo</a>
    <Image class='interview-img' src={handIcon} alt="hand-icon">
  </div>
  <article class='blog-section'>
    <PostList posts={posts} />
  </article>
  <section class="inter-section">
    
      <Image class='inter-image' src={camera} alt='camera-icon'/>
    
    <h2 id="interviews">ZUOWywiady</h2>
  </section>
</Layout>

<style>
  .blog-section {
    background-color: var(--base-white);
    padding: 25px;
    display: flex;
    flex-direction: column;
  }
  .interview-wrapper {
    display: flex;
    gap: 10px;
    align-items: center;
    padding: 0px 0px 5px 0px;
    font-family: var(--font_3);
    background-color: var(--base-orange);
  }
  .interview-wrapper a {
    color: var(--base-white);
    font-size: 1.1rem;
    text-decoration: underline;
  }
  .interview-img {
    margin-left: 6px;
    margin-bottom: 10px;
    width: 30px;
    height: auto;
    object-fit: contain;
    animation: animate 3s linear infinite forwards; 
  }
  span {
    padding-left: 25px;
    color: var(--base-white);
  }
  .inter-section {
    display: flex;
    align-items: center;
    background-color: var(--base-grey);
    padding: 25px;
    color: var(--violet);
  }
  .inter-image {
    max-width: 10%;
    object-fit: contain;
    height: fit-content;
    
  }
h2 {
  font-size: clamp(2rem, 3vw, 4rem);
  line-height: 46px;
  font-family: var(--font_3);
  color: var(--violet);
  margin-left: 3px;
  letter-spacing: -1.5px;
}
  @keyframes animate {
    0% {
        transform: rotate(-35deg);
    }
    25% {
        transform: rotate(35deg);
    }
    50% {
        transform: rotate(-35deg);
    }
    75% {
        transform: rotate(35deg);
    }
    100% {
        transform: rotate(-35deg);
    }
  }
</style>
