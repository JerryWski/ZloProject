---
export interface Props {
  heading?: string;
  text?: string;
  image?: string;
}

const {
  heading = 'Welcome',
  text = 'Lorem ipsum dos solores Res',
  image = '',
} = Astro.props as Props;
---

<section>
  <div class='header-wrapper'>
    <span>Aloha</span>
    <h1>
      {heading}
    </h1>
    <h3>{text}</h3>
  </div>
  <div class='image-wrapper'><img src={image} alt='' /></div>
</section>

<style>
  section {
    gap: 20px;
    padding: 55px 25px;
    display: flex;
    background-color: var(--base-orange);

    /* background-image: linear-gradient(180deg, #ff5858 0%, #f09819 100%); */
    /* background: linear-gradient(
      180deg,
      rgb(250, 166, 70) 0%,
      rgb(241, 125, 58) 49%,
      rgb(221, 98, 27) 94%
    ); */
    font-family: var(--font_3);
    color: var(--violet);
  }
  .header-wrapper {
    display: flex;
    flex-basis: 1;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
  }
  .image-wrapper {
    /* opacity: .2; */
    display: flex;
    justify-content: center;
    align-items: center;
    /* width: 90px; */
  }
  div img {
    opacity: 0.6;
    width: 80%;
  }
  h1 {
    width: fit-content;
    font-size: clamp(2.7rem, 10vw, 5.5rem);
    line-height: 46px;
    letter-spacing: -1.5px;
  }

  h3 {
    margin-top: 15px;
    font-weight: 400;
    color: var(--violet);
    font-style: italic;
  }
  span {
    color: var(--base-white);
    font-family: var(--fancy-font);
    font-size: clamp(3rem, 10vw, 5.5rem);
  }
</style>
